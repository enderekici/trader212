# ============================================================================
# SECRETS (never stored in DB, only via env vars)
# ============================================================================

# Required
TRADING212_API_KEY=                 # Your Trading212 API key
TELEGRAM_BOT_TOKEN=                 # Telegram bot token from @BotFather
TELEGRAM_CHAT_ID=                   # Your Telegram chat ID

# Data source API keys (comma-separated for multiple keys = higher rate limits)
FINNHUB_API_KEY=                    # Finnhub.io - free: 60 calls/min per key (e.g. key1,key2,key3)
MARKETAUX_API_TOKEN=                # Marketaux.com - free: 100 calls/day per key (e.g. tok1,tok2)

# AI provider keys
ANTHROPIC_API_KEY=                  # For Anthropic adapter

# ============================================================================
# SERVER (not in config DB)
# ============================================================================

API_PORT=3001                       # REST + WebSocket port
NODE_ENV=development                # development | production
LOG_LEVEL=info                      # trace | debug | info | warn | error
DB_PATH=./data/trader212.db         # SQLite file path

# ============================================================================
# ALL CONFIG OPTIONS (env vars override DB values)
#
# Every config key maps to an env var:
#   config key             → ENV_VAR_NAME
#   t212.environment       → T212_ENVIRONMENT
#   execution.dryRun       → EXECUTION_DRY_RUN
#   risk.maxPositions      → RISK_MAX_POSITIONS
#   ai.openaiCompat.baseUrl → AI_OPENAI_COMPAT_BASE_URL
#
# Values are parsed as JSON, so use:
#   "demo" for strings, 5 for numbers, true/false for booleans,
#   [1,2,3] for arrays
#
# All values below show their defaults. Uncomment to override.
# ============================================================================

# --- Trading212 ---
# T212_ENVIRONMENT="demo"                          # demo | live
# T212_ACCOUNT_TYPE="INVEST"                       # INVEST | ISA

# --- Pairlist ---
# PAIRLIST_ENABLED=true                            # Enable pairlist pipeline
# PAIRLIST_REFRESH_MINUTES=30                      # Refresh interval (minutes)
# PAIRLIST_FILTERS=["volume","price","marketCap","volatility","blacklist","maxPairs"]
# PAIRLIST_VOLUME_MIN_AVG_DAILY_VOLUME=500000      # Min avg daily volume (shares)
# PAIRLIST_VOLUME_TOP_N=100                        # Top N by volume
# PAIRLIST_PRICE_MIN=5                             # Min stock price USD
# PAIRLIST_PRICE_MAX=1500                          # Max stock price USD
# PAIRLIST_MARKET_CAP_MIN_BILLIONS=2               # Min market cap ($B)
# PAIRLIST_VOLATILITY_MIN_DAILY_PCT=0.5            # Min daily volatility %
# PAIRLIST_VOLATILITY_MAX_DAILY_PCT=10             # Max daily volatility %
# PAIRLIST_VOLATILITY_LOOKBACK_DAYS=20             # Volatility lookback period
# PAIRLIST_BLACKLIST=[]                            # Symbols to never trade
# PAIRLIST_MAX_PAIRS=30                            # Max stocks in pairlist
# PAIRLIST_MODE="dynamic"                          # dynamic | static | hybrid
# PAIRLIST_STATIC_SYMBOLS=[]                       # Symbols for static/hybrid mode

# --- Data Sources ---
# DATA_FINNHUB_ENABLED=true                        # Enable Finnhub data
# DATA_FINNHUB_QUOTES_ENABLED=true                 # Enable real-time quotes
# DATA_FINNHUB_NEWS_ENABLED=true                   # Enable company news
# DATA_FINNHUB_EARNINGS_ENABLED=true               # Enable earnings calendar
# DATA_FINNHUB_INSIDERS_ENABLED=true               # Enable insider transactions
# DATA_MARKETAUX_ENABLED=true                      # Enable Marketaux data
# DATA_MARKETAUX_MAX_CALLS_PER_DAY=100             # Marketaux daily call budget
# DATA_MARKETAUX_PRIORITY_STOCKS_COUNT=10          # Top N stocks get Marketaux news
# DATA_YAHOO_ENABLED=true                          # Enable Yahoo Finance data
# DATA_EARNINGS_BLACKOUT_DAYS=3                    # Avoid trading N days before earnings
# DATA_NEWS_MONITORING_ENABLED=true                # 24/7 news monitoring
# DATA_NEWS_MONITORING_OFF_HOURS_INTERVAL_MINUTES=60 # Off-hours news check interval

# --- Analysis ---
# ANALYSIS_INTERVAL_MINUTES=15                     # Analysis loop interval
# ANALYSIS_HISTORICAL_DAYS=365                     # OHLCV lookback days
# ANALYSIS_RSI_PERIOD=14                           # RSI period
# ANALYSIS_MACD_FAST=12                            # MACD fast period
# ANALYSIS_MACD_SLOW=26                            # MACD slow period
# ANALYSIS_MACD_SIGNAL=9                           # MACD signal period
# ANALYSIS_SMA_PERIODS=[20,50,200]                 # SMA periods
# ANALYSIS_EMA_PERIODS=[12,26]                     # EMA periods
# ANALYSIS_BB_PERIOD=20                            # Bollinger Bands period
# ANALYSIS_BB_STD_DEV=2                            # Bollinger Bands std dev
# ANALYSIS_ATR_PERIOD=14                           # ATR period
# ANALYSIS_ADX_PERIOD=14                           # ADX period
# ANALYSIS_STOCHASTIC_K_PERIOD=14                  # Stochastic K period
# ANALYSIS_STOCHASTIC_D_PERIOD=3                   # Stochastic D period
# ANALYSIS_CCI_PERIOD=20                           # CCI period
# ANALYSIS_MFI_PERIOD=14                           # MFI period
# ANALYSIS_ROC_PERIOD=12                           # ROC period
# ANALYSIS_VOLUME_SPIKE_THRESHOLD=1.5              # Volume spike multiplier
# ANALYSIS_SUPPORT_RESISTANCE_LOOKBACK=20          # S/R lookback bars

# --- AI ---
# AI_ENABLED=true                                  # Enable AI analysis
# AI_PROVIDER="anthropic"                          # anthropic | ollama | openai-compatible
# AI_MODEL="claude-sonnet-4-5-20250929"            # AI model identifier
# AI_OLLAMA_BASE_URL="http://localhost:11434"      # Ollama base URL
# AI_OLLAMA_MODEL="palmyra-fin"                    # Ollama model name
# AI_OPENAI_COMPAT_BASE_URL="http://localhost:8317/v1"  # OpenAI-compatible base URL
# AI_OPENAI_COMPAT_MODEL="claude-sonnet-4-5-20250929"   # OpenAI-compatible model
# AI_OPENAI_COMPAT_API_KEY=""                      # OpenAI-compatible API key
# AI_MAX_CONCURRENT_CALLS=2                        # Max concurrent AI calls
# AI_TIMEOUT_SECONDS=60                            # AI call timeout
# AI_INCLUDE_HISTORICAL_SIGNALS=true               # Include historical signals in prompt
# AI_HISTORICAL_SIGNAL_COUNT=5                     # Previous signals sent to AI
# AI_TEMPERATURE=0.1                               # AI temperature (low = consistent)
# AI_RESEARCH_ENABLED=true                         # Enable AI market research
# AI_RESEARCH_INTERVAL_MINUTES=120                 # Research interval (minutes)
# AI_RESEARCH_TOP_STOCKS_COUNT=50                  # Top N stocks to research

# --- Risk ---
# RISK_MAX_POSITIONS=5                             # Max open positions
# RISK_MAX_POSITION_SIZE_PCT=0.15                  # Max 15% of portfolio per position
# RISK_MIN_STOP_LOSS_PCT=0.01                      # AI can't set tighter than 1%
# RISK_MAX_STOP_LOSS_PCT=0.10                      # AI can't set wider than 10%
# RISK_MAX_RISK_PER_TRADE_PCT=0.02                 # Max 2% portfolio risk per trade
# RISK_DAILY_LOSS_LIMIT_PCT=0.05                   # Auto-pause at -5% daily loss
# RISK_MAX_DRAWDOWN_ALERT_PCT=0.10                 # Alert at -10% from peak
# RISK_MAX_SECTOR_CONCENTRATION=3                  # Max positions in same sector
# RISK_MAX_CORRELATION=0.85                        # Max correlation with existing positions
# RISK_CORRELATION_LOOKBACK_DAYS=30                # Correlation lookback period

# --- Execution ---
# EXECUTION_DRY_RUN=true                           # Dry-run mode (no real trades)
# EXECUTION_POSITION_MONITOR_MINUTES=5             # Position monitor interval
# EXECUTION_T212_SYNC_MINUTES=10                   # T212 sync interval
# EXECUTION_ORDER_TIMEOUT_SECONDS=10               # Order fill timeout
# EXECUTION_STOP_LOSS_DELAY=3000                   # ms delay before placing stop
# EXECUTION_REQUIRE_APPROVAL=false                 # Require trade plan approval
# EXECUTION_APPROVAL_TIMEOUT_MINUTES=5             # Plan approval timeout (minutes)
# EXECUTION_APPROVAL_AUTO_EXECUTE=false            # Auto-execute on timeout (false = reject)
# EXECUTION_MIN_RISK_REWARD_RATIO=1.5              # Min risk/reward ratio
# EXECUTION_MAX_HOLD_DAYS=30                       # Max hold duration (days)
# EXECUTION_RE_EVALUATE_POSITIONS=true             # Re-evaluate open positions
# EXECUTION_RE_EVAL_INTERVAL_MINUTES=30            # Re-evaluation interval

# --- Monitoring ---
# MONITORING_DAILY_SUMMARY_TIME="16:30"            # Daily summary time (ET)
# MONITORING_PRE_MARKET_ALERT_TIME="09:00"         # Pre-market alert time (ET)
# MONITORING_WEEKLY_REPORT_DAY="friday"            # Weekly report day
